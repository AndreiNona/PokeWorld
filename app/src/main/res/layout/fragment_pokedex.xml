<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokedex_background"
    tools:context=".view.PokedexFragment">

    <TextView
        android:id="@+id/text_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_pokedex"
        android:layout_width="131dp"
        android:layout_height="126dp"
        android:src="@drawable/pokemon_eevee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <TextView
        android:id="@+id/text_pokedex_name_label"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="Name:"
        android:textColor="@color/cloud_white"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/image_pokedex"
        app:layout_constraintTop_toTopOf="@+id/image_pokedex" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="PlaceHolderName"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/text_pokedex_name_label"
        app:layout_constraintTop_toTopOf="@+id/text_pokedex_name_label" />

    <TextView
        android:id="@+id/text_pokedex_pokeNumber_label"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="PokeNumber:"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/image_pokedex"
        app:layout_constraintTop_toTopOf="@+id/text_pokedex_name_label" />

    <TextView
        android:id="@+id/text_pokedex_pokedexNo"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="113"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/text_pokedex_pokeNumber_label"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/text_pokedex_nickname_label"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="Nickname"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/image_pokedex"
        app:layout_constraintTop_toTopOf="@+id/text_pokedex_pokeNumber_label" />

    <TextView
        android:id="@+id/text_pokedex_nickname"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="Jeff"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/text_pokedex_nickname_label"
        app:layout_constraintTop_toBottomOf="@+id/text_pokedex_pokedexNo" />
    <TextView
        android:id="@+id/text_pokedex_CP_label"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="CP:"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/image_pokedex"
        app:layout_constraintTop_toTopOf="@+id/text_pokedex_nickname_label" />
    <TextView
        android:id="@+id/text_pokedex_CP"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="1400"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/text_pokedex_CP_label"
        app:layout_constraintTop_toBottomOf="@+id/text_pokedex_nickname" />

    <TextView
        android:id="@+id/text_pokedex_gender_label"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="Gender:"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/image_pokedex"
        app:layout_constraintTop_toTopOf="@+id/text_pokedex_CP_label" />
    <TextView
        android:id="@+id/text_pokedex_gender"
        android:layout_width="150dp"
        android:layout_height="23dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="M"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/text_pokedex_gender_label"
        app:layout_constraintTop_toBottomOf="@+id/text_pokedex_CP" />

</androidx.constraintlayout.widget.ConstraintLayout>