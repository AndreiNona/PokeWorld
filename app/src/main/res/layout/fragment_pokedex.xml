<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pokedexLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokedex_background"
    tools:context=".view.PokedexFragment">

    <TextView
        android:id="@+id/text_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.518" />

    <ImageView
        android:id="@+id/image_pokedex"
        android:layout_width="131dp"
        android:layout_height="126dp"
        android:src="@drawable/pokemon_eevee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <TextView
        android:id="@+id/text_pokedex_name_label"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="Name:"
        android:textColor="@color/cloud_white"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/image_pokedex"
        app:layout_constraintTop_toTopOf="@+id/image_pokedex" />

    <EditText
        android:id="@+id/edit_text_pokedex_name"
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/text_pokedex_name_label"
        app:layout_constraintTop_toTopOf="@+id/text_pokedex_name_label" />


    <TextView
        android:id="@+id/text_pokedex_gender_label"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="Gender:"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/image_pokedex"
        app:layout_constraintTop_toBottomOf="@+id/text_pokedex_CP_label" />

    <TextView
        android:id="@+id/text_pokedex_CP_label"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="CP:"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/image_pokedex"
        app:layout_constraintTop_toBottomOf="@+id/text_pokedex_nickname_label" />

    <EditText
        android:id="@+id/edit_text_pokedex_cp"
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/text_pokedex_CP_label"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_pokedex_nickname" />

    <TextView
        android:id="@+id/text_pokedex_nickname_label"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="Nickname"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/image_pokedex"
        app:layout_constraintTop_toBottomOf="@+id/text_pokedex_pokeNumber_label" />

    <EditText
        android:id="@+id/edit_text_pokedex_nickname"
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/text_pokedex_nickname_label"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_pokedex_pokedexno" />

    <TextView
        android:id="@+id/text_pokedex_pokeNumber_label"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="PokeNumber:"
        android:textColor="@color/white"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@+id/image_pokedex"
        app:layout_constraintTop_toBottomOf="@+id/text_pokedex_name_label" />

    <EditText
        android:id="@+id/edit_text_pokedex_pokedexno"
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/text_pokedex_pokeNumber_label"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_pokedex_name" />


    <Button
        android:id="@+id/button_pokedex_release"
        android:layout_width="116dp"
        android:layout_height="47dp"
        android:layout_marginBottom="84dp"
        android:text="Release"
        android:fontFamily="@font/pokemon_font_alternative"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_pokedex_edit_name_pokedex"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/button_pokedex_powerup"
        app:layout_constraintTop_toBottomOf="@+id/button_pokedex_powerup"
        app:layout_constraintVertical_bias="0.117" />

    <Button
        android:id="@+id/button_pokedex_powerup"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="Power Up"
        app:layout_constraintStart_toStartOf="@+id/button_pokedex_edit_nickname"
        app:layout_constraintTop_toBottomOf="@+id/button_pokedex_edit_nickname" />

    <Button
        android:id="@+id/button_pokedex_edit_nickname"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="384dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="Rename"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_pokedex_edit_name_pokedex"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="Evolve"
        app:layout_constraintStart_toEndOf="@+id/button_pokedex_powerup"
        app:layout_constraintTop_toTopOf="@+id/button_pokedex_powerup" />

    <Button
        android:id="@+id/button_pokedex_edit_gender"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/pokemon_font_alternative"
        android:text="New Gender"
        app:layout_constraintStart_toEndOf="@+id/button_pokedex_edit_nickname"
        app:layout_constraintTop_toTopOf="@+id/button_pokedex_edit_nickname" />

    <Spinner
        android:id="@+id/spinner_pokedex"
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:spinnerMode="dropdown"
        android:fontFamily="@font/pokemon_font_alternative"
        app:layout_constraintStart_toEndOf="@+id/text_pokedex_gender_label"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_pokedex_cp" />


</androidx.constraintlayout.widget.ConstraintLayout>